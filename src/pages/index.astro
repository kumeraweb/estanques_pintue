---
const enConstruccion = false
import BaseLayout from '../layouts/BaseLayout.astro'
import UnderConstruction from '../components/UnderConstruction.astro'
import Hero from '../components/Hero.astro'
import WhyUs from '../components/WhyUs.astro'
import FeaturedProducts from '../components/FeaturedProducts.astro'
import CTA from '../components/CTA.astro'
import PromoBanner from '../components/PromoBanner.astro'
import BannerCarousel from '../components/BannerCarousel.astro'
---

<BaseLayout>
  {
    enConstruccion ? (
      <UnderConstruction />
    ) : (
      <>
        <Hero />
        <BannerCarousel />
        <WhyUs />
        <FeaturedProducts />
        <CTA />
      </>
    )
  }
</BaseLayout>
