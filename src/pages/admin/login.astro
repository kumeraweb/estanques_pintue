---
export const prerender = false
import { supabase } from '../../lib/supabase'
import BaseLayout from '../../layouts/BaseLayout.astro'

// Obtener error
const error = Astro.url.searchParams.get('error') ?? null

// SOLO manejar el formulario si es POST
if (Astro.request.method === 'POST') {
  const contentType = Astro.request.headers.get('content-type') || ''

  // Aseguramos que sea un form vÃ¡lido
  if (!contentType.includes('form')) {
    console.warn('Request sin form vÃ¡lida, ignorandoâ€¦')
  } else {
    const form = await Astro.request.formData()
    const email = form.get('email') as string
    const password = form.get('password') as string

    const { error } = await supabase.auth.signInWithPassword({ email, password })

    if (error) {
      return Astro.redirect(`/admin/login?error=${encodeURIComponent('Credenciales incorrectas')}`)
    }

    return Astro.redirect('/admin')
  }
}
---

