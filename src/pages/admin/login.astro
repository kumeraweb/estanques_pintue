    <div class="bg-white shadow-lg rounded-xl p-8 w-full max-w-md">
      <h2 class="text-2xl font-bold text-center mb-6 text-[var(--color-primary)]">
        Panel Administrador
      </h2>

      {error && <p class="text-red-600 text-center mb-4">{error}</p>}

      <form method="post" class="flex flex-col gap-4">
        <input
          type="email"
          name="email"
          placeholder="Correo"
          required
          class="border rounded-lg px-4 py-3 focus:ring-2 focus:ring-[var(--color-primary)] outline-none"
        />

        <div class="relative">
