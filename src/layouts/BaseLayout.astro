---
import { SITE } from '../data/site'
import '../styles/global.css'
import FloatingButtons from '../components/FloatingButtons.astro'
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'

const { title, description, domain, image, locale } = SITE
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />

    <!-- Primary Meta -->
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Canonical -->
    <link rel="canonical" href={domain} />

    <!-- Favicon -->
    <link rel="shortcut icon" href="/imgs/estan_pintue.jpeg" type="image/jpeg" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={domain} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={image} />
    <meta property="og:locale" content={locale} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Estanques Pintué",
        "url": "https://www.estanquespintue.cl",
        "image": "https://www.estanquespintue.cl/images/og-estanquespintue.png",
        "description": "Fabricación y venta de estanques de agua en Pintué. Estanques de alta resistencia, entrega rápida y atención personalizada.",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Pintué, Paine",
          "addressLocality": "Paine",
          "addressRegion": "Metropolitana",
          "addressCountry": "CL"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": -33.849,
          "longitude": -70.818
        },
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "+56977995073",
          "contactType": "customer service",
          "areaServed": "CL"
        },
        "sameAs": ["https://www.instagram.com/estanquespintue?igsh=MWxkNGF5cHcybHNkZQ=="]
      }
    </script>

    <!-- Google tag (gtag.js) -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=AW-17756873365"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || []
      function gtag() {
        dataLayer.push(arguments)
      }
      gtag('js', new Date())

      gtag('config', 'AW-17756873365')
    </script>
  </head>

  <body class="bg-white text-gray-900 min-h-screen flex flex-col">
    <Navbar />

    <main class="flex-1">
      <slot />
    </main>

    <Footer />
    <FloatingButtons />
    <script is:inline>
      document.addEventListener('DOMContentLoaded', () => {
        const reveals = document.querySelectorAll('.reveal')

        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                entry.target.classList.add('visible')
              }
            })
          },
          { threshold: 0.15 }
        )

        reveals.forEach((el) => observer.observe(el))
      })
    </script>
  </body>
</html>
