---
import { MessageCircle } from 'lucide-astro'

const wa = 'https://wa.me/569XXXXXXXX?text=Hola!%20Quiero%20cotizar%20un%20estanque'

const illustration = '/imgs/bg_hero.png'

const photos = ['/imgs/1.jpeg', '/imgs/2.jpeg', '/imgs/3.jpeg', '/imgs/4.jpeg', '/imgs/5.jpeg']
---

<section class="relative w-full min-h-[85vh] flex items-cente pt-12 md:pt-32">
  <!-- Fondo ilustrado -->
  <img
    src={illustration}
    alt="Fondo ilustrado"
    class="absolute inset-0 w-full h-full object-cover z-0 opacity-0 animate-hero-fade"
  />

  <!-- Overlay oscuro suave -->
  <div class="absolute inset-0 bg-black/10 backdrop-blur-[6px]
 z-10"></div>

  <!-- CONTENIDO PRINCIPAL -->
  <div
    class="relative z-20 w-full max-w-6xl mx-auto px-6 py-16 md:py-24 grid md:grid-cols-2 gap-6 md:gap-10 items-center"
  >
    <!-- TEXTO HERO -->
    <div class="text-left">
      <h1
        class="text-3xl sm:text-6xl font-extrabold leading-tight text-white text-contrast mb-4 animate-fade-up-delay-1"
      >
        Estanques Acu치ticos Artesanales
      </h1>

      <p
        class="text-base sm:text-xl text-white/90 text-contrast mb-6 max-w-md leading-relaxed animate-fade-up-delay-2"
      >
        Naturaleza viva, peces koi, plantas acu치ticas y dise침os personalizados...
      </p>

      <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 animate-fade-up-delay-3">
        <a
          href="#catalogo"
          class="bg-[var(--color-primary)] text-white text-center font-semibold px-6 py-3 rounded-full shadow-lg hover:opacity-90 transition"
        >
          Ver Cat치logo
        </a>

        <a
          href={wa}
          target="_blank"
          class="flex items-center justify-center gap-2 bg-white text-[var(--color-primary)] font-semibold px-6 py-3 rounded-full shadow-lg hover:bg-gray-100 transition"
        >
          <MessageCircle class="w-5 h-5" />
          Cotizar por WhatsApp
        </a>
      </div>
    </div>

    <!-- CARRUSEL DE FOTOS -->
    <div class="relative w-full max-w-xs sm:max-w-sm mx-auto md:mx-0 mt-6 md:mt-0">
      <div class="relative w-full h-64 sm:h-80 rounded-2xl overflow-hidden shadow-xl">
        {
          photos.map((photo, index) => (
            <img
              src={photo}
              alt="Trabajo real"
              class={`absolute inset-0 w-full h-full object-cover transition-opacity duration-1000 ${
                index === 0 ? 'opacity-100 slide-photo' : 'opacity-0 slide-photo'
              }`}
            />
          ))
        }
      </div>
    </div>
  </div>
</section>

<script is:inline>
  const slides = document.querySelectorAll('.slide-photo')
  let current = 0

  setInterval(() => {
    slides[current].style.opacity = 0
    current = (current + 1) % slides.length
    slides[current].style.opacity = 1
  }, 3500)
</script>
