---
import { MessageCircle, Instagram } from 'lucide-astro'

const wa = 'https://wa.me/569XXXXXXXX?text=Hola!%20Quiero%20cotizar%20un%20estanque'
const ig = 'https://www.instagram.com/estanques.pintue/'
---

<div class="fixed bottom-6 right-6 z-50 flex flex-col gap-3">
  <!-- WhatsApp -->
  <a
    href={wa}
    target="_blank"
    class="bg-[var(--color-primary)] text-white p-3 rounded-full shadow-xl
           hover:scale-110 active:scale-95 transition-transform duration-200 flex items-center justify-center"
  >
    <MessageCircle class="w-6 h-6" />
  </a>

  <!-- Instagram -->
  <a
    href={ig}
    target="_blank"
    class="bg-white text-[var(--color-primary)] p-3 rounded-full shadow-xl border
           hover:scale-110 active:scale-95 transition-transform duration-200 flex items-center justify-center"
  >
    <Instagram class="w-6 h-6" />
  </a>
</div>
